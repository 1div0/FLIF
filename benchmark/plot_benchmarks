#!/bin/bash

INPUTPREFIX="input/"

mkdir -p tmp

for c in $INPUTPREFIX/*
do
    TYPE=$(basename $c)
    if [ -e output_data/result.PNG95.$TYPE ]
    then
      echo "Plotting $TYPE"
      perl -p -e "s/CATEGORY/$TYPE/g; s/NUMBER/$(wc -l output_data/result.PNG95.$TYPE | cut -f 1 -d " ")/g"  plot-template.gnu > tmp/plot.gnu
      gnuplot tmp/plot.gnu
    else
      echo "Skipping $TYPE"
    fi
done